<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="CcWaydroidPanel" parent="CcPanel">
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="end">
              <object class="GtkBox">
                <property name="spacing">15</property>
                <child>
                  <object class="GtkSpinner" id="enable_waydroid_spinner">
                  </object>
                </child>
                <child>
                  <object class="GtkSwitch" id="enable_waydroid_switch">
                    <property name="valign">center</property>
                    <property name="sensitive">False</property>
                    <signal name="notify::active" handler="enable_waydroid_active_cb" swapped="yes"/>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkStack" id="stack">
                <child>
                  <object class="GtkStackPage">
                    <property name="name">configure</property>
                    <property name="child">
                      <object class="AdwPreferencesPage" id="configure_page">
                        <child>
                          <object class="AdwPreferencesGroup" id="waydroid_settings">
                            <property name="sensitive">False</property>
                            <property name="title" translatable="yes">Settings</property>
                            <child>
                                <object class="AdwActionRow" id="waydroid_setting_suspend">
                                  <property name="activatable_widget">setting_suspend_switch</property>
                                  <property name="title" translatable="yes">Suspend applications</property>
                                  <property name="subtitle" translatable="yes">If unused, suspend applications</property>
                                  <child type="suffix">
                                    <object class="GtkSwitch" id="setting_suspend_switch">
                                      <property name="valign">center</property>
                                      <signal name="notify::active" handler="setting_suspend_active_cb" object="CcWaydroidPanel" swapped="yes"/>
                                    </object>
                                  </child>
                                </object>
                             </child>
                             <child>
                                <object class="AdwActionRow" id="waydroid_setting_uevent">
                                  <property name="activatable_widget">setting_uevent_switch</property>
                                  <property name="title" translatable="yes">Waydroid access hardware directly</property>
                                  <property name="subtitle" translatable="yes">Will improve stability of NFC and GPS</property>
                                  <child type="suffix">
                                    <object class="GtkSwitch" id="setting_uevent_switch">
                                      <property name="valign">center</property>
                                      <signal name="notify::active" handler="setting_uevent_active_cb" object="CcWaydroidPanel" swapped="yes"/>
                                    </object>
                                  </child>
                                </object>
                              </child>
                              <child>
                                <object class="AdwActionRow" id="waydroid_setting_shared_folder">
                                  <property name="activatable_widget">setting_shared_folder_switch</property>
                                  <property name="title" translatable="yes">Shared folder</property>
                                  <property name="subtitle" translatable="yes">Share a Waydroid folder with Android</property>
                                  <child type="suffix">
                                    <object class="GtkSwitch" id="setting_shared_folder_switch">
                                      <property name="valign">center</property>
                                      <signal name="notify::active" handler="setting_shared_folder_active_cb" object="CcWaydroidPanel" swapped="yes"/>
                                    </object>
                                  </child>
                                </object>
                              </child>
                              <child>
                                <object class="AdwActionRow" id="waydroid_setting_notifications">
                                  <property name="activatable_widget">setting_notifications_switch</property>
                                  <property name="title" translatable="yes">Forward notifications</property>
                                  <property name="subtitle" translatable="yes">Show Android notifications</property>
                                  <child type="suffix">
                                    <object class="GtkSwitch" id="setting_notifications_switch">
                                      <property name="valign">center</property>
                                      <signal name="notify::active" handler="setting_notifications_active_cb" object="CcWaydroidPanel" swapped="yes"/>
                                    </object>
                                  </child>
                                </object>
                             </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwPreferencesGroup" id="android_applications">
                            <property name="sensitive">False</property>
                            <property name="title" translatable="yes">Android applications</property>
                          </object>
                        </child>
                        <child>
                          <object class="AdwPreferencesGroup" id="reset_settings">
                            <property name="title" translatable="yes">Reset Waydroid</property>
                            <child>
                              <object class="AdwActionRow">
                                <property name="activatable_widget">clear_data_button</property>
                                <property name="title" translatable="yes">Clear data</property>
                                <property name="subtitle" translatable="yes">This will remove applications and settings</property>
                                <child type="suffix">
                                  <object class="GtkButton" id="clear_data_button">
                                    <property name="valign">center</property>
                                    <property name="icon-name">user-trash-symbolic</property>
                                    <style>
                                      <class name="destructive-action"/>
                                    </style>
                                    <signal name="clicked" handler="clear_data_button_clicked_cb" swapped="yes"/>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">install</property>
                    <property name="child">
                      <object class="AdwStatusPage" id="install_status_page">
                        <property name="vexpand">True</property>
                        <property name="icon-name">org.gnome.Settings-waydroid-symbolic</property>
                        <property name="title" translatable="yes">Waydroid needs to be installed</property>
                        <child>
                          <object class="GtkBox" id="install_box">
                            <property name="opacity">1.0</property>
                            <property name="orientation">vertical</property>
                            <property name="halign">center</property>
                            <property name="spacing">15</property>
                            <child>
                              <object class="GtkButton" id="install_waydroid_button">
                                <property name="use_underline">True</property>
                                <property name="valign">center</property>
                                <property name="label" translatable="yes">Install</property>
                                <signal name="clicked" handler="install_waydroid_clicked_cb" swapped="yes"/>
                                <style>
                                  <class name="suggested-action"/>
                                  <class name="pill" />
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkSpinner" id="install_waydroid_spinner">
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>

